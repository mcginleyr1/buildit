# Development Dockerfile with cargo-watch for live reload
FROM rust:latest

RUN apt-get update && apt-get install -y libssl-dev pkg-config && rm -rf /var/lib/apt/lists/*

# Install cargo-watch for live reload
RUN cargo install cargo-watch --locked

WORKDIR /app

# Copy everything
COPY . .

# Build once to cache dependencies
RUN cargo build -p buildit-api

EXPOSE 3000

ENV RUST_LOG=info,buildit_api=debug,buildit_scheduler=debug

# Use cargo-watch to rebuild and restart on changes
CMD ["cargo", "watch", "-x", "run -p buildit-api"]
